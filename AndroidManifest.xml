<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xihuanicode.tlatoa.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:maxSdkVersion="17"
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:debuggable="true"
        android:allowBackup="true"
        android:icon="@drawable/tlatoa_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
        <activity
            android:name="com.xihuanicode.tlatoa.activity.SplashActivity"
            android:label="@string/tlatoa_app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TermsAndConditionsActivity"
            android:label="@string/tlatoa_app_name" />
        <activity
            android:name=".AppOverviewActivity"
            android:label="@string/tlatoa_app_name" />
        <activity
            android:name=".MainActivity"
            android:label="@string/tlatoa_app_name" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/tlatoa_app_name" />
        <activity
            android:name=".TranslationResultActivity"
            android:label="@string/tlatoa_app_name" />
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/tlatoa_app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/tlatoa_app_name"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />
        

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />
    </application>

</manifest>