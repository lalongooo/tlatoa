<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Styles for the custom dialogs library -->

    <style name="leftBehindMenuScroll">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/tlatoa_main_color_orange</item>
    </style>

    <style name="rightBehindMenuScroll">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/tlatoa_main_color_orange</item>
    </style>

    <style name="behindMenuScrollContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="behindMenuItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="behindMenuItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BigLabelsForRegistrationConfirmation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tlatoa_main_color_orange</item>
        <!-- <item name="android:background">@color/background_dark</item> -->
    </style>

    <style name="CustomDarkTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="sdlDialogStyle">@style/DialogStyleDark.Custom</item>
        <item name="android:windowBackground">@color/tlatoa_main_color_orange</item>
    </style>

    <style name="DialogStyleDark.Custom">

        <!-- anything can be left out: -->
        <item name="titleTextColor">@color/tlatoa_main_color_orange</item>
        <item name="titleSeparatorColor">@color/tlatoa_main_color_orange</item>
        <item name="messageTextColor">@color/dialog_message_text_dark</item>
        <item name="buttonTextColor">@color/dialog_button_text_dark</item>
        <item name="buttonSeparatorColor">@color/dialog_button_separator_dark</item>
        <item name="buttonBackgroundColorNormal">@color/dialog_button_normal_dark</item>
        <item name="buttonBackgroundColorPressed">@color/tlatoa_main_color_orange</item>
        <item name="buttonBackgroundColorFocused">@color/tlatoa_main_color_orange</item>
    </style>
    
    <style name="TlatoaMainTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="sdlDialogStyle">@style/DialogStyleDark.Custom</item>
    </style>
    
    <style name="TlatoaSplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="sdlDialogStyle">@style/DialogStyleDark.Custom</item>
    </style>
    
    <style name="TlatoaTheme" parent="@style/Theme.Base.AppCompat.Light">
        <item name="android:actionBarStyle">@style/TlatoaActionBar</item>
        <item name="sdlDialogStyle">@style/DialogStyleDark.Custom</item>
    </style>
    
    <style name="TlatoaActionBar" parent="@style/Widget.AppCompat.Light.Base.ActionBar">
        <item name="android:background">@color/tlatoa_actionbar_background_color</item>
        <item name="android:textColor">@color/tlatoa_main_color_orange</item>
        <item name="android:titleTextStyle">@style/TlatoaActionBarTextAppearance</item>
    </style>

    <style name="TlatoaActionBarTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/tlatoa_main_color_orange</item>
    </style>

    <style name="facebook_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tlatoa_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tlatoa_action_bar_menu_button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/tlatoa_main_color_orange</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">left</item>
    </style>

</resources>